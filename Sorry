<img id="puppyImg" src="puppy.png" alt="puppy" style="display:none;position:fixed;right:18px;bottom:18px;width:160px;border-radius:12px;box-shadow:0 12px 30px rgba(10,40,80,0.2)">

<script>
  // SLIDESHOW
  const slides = document.getElementById('slides');
  const dots = document.querySelectorAll('.dot');
  let idx = 0;
  const total = slides.children.length;
  function updateSlide(i){
    idx = (i + total) % total;
    slides.style.transform = `translateX(${-idx * 100}%)`;
    dots.forEach(d=>d.classList.remove('active'));
    dots[idx].classList.add('active');
  }
  document.getElementById('prev').onclick = ()=> updateSlide(idx-1);
  document.getElementById('next').onclick = ()=> updateSlide(idx+1);
  dots.forEach(d=>d.addEventListener('click',()=>updateSlide(parseInt(d.dataset.i))));
  updateSlide(0);
  // auto rotate
  let auto = setInterval(()=>updateSlide(idx+1), 4200);
  document.getElementById('slideshow').addEventListener('mouseenter', ()=> clearInterval(auto));
  document.getElementById('slideshow').addEventListener('mouseleave', ()=> auto = setInterval(()=>updateSlide(idx+1), 4200));

  // MUSIC / GRAM
  const music = document.getElementById('musicPlayer');
  const gram = document.getElementById('gramBtn');
  const trackTitle = document.getElementById('trackTitle');
  let playing=false;
  gram.addEventListener('click', ()=>{
    if(!playing){ music.play().catch(()=>{}); gram.textContent='‚è∏'; trackTitle.textContent='playing: sweet retro mix'; playing=true; }
    else { music.pause(); gram.textContent='üé∂'; trackTitle.textContent='paused'; playing=false; }
  });

  // YES / NO BUTTONS
  const yes = document.getElementById('yesBtn');
  const no = document.getElementById('noBtn');
  const feedback = document.getElementById('feedbackArea');

  // simple confetti generator
  function popConfetti(){
    const colors = ['#6fc3ff','#6fe4ff','#fff27a','#a6ffde','#ffd1f2'];
    for(let i=0;i<40;i++){
      const el = document.createElement('div');
      el.className='confetti-piece';
      el.style.left = (50 + (Math.random()-0.5)*60) + '%';
      el.style.top = '-10%';
      el.style.width = (8 + Math.random()*10) + 'px';
      el.style.height = (8 + Math.random()*10) + 'px';
      el.style.background = colors[Math.floor(Math.random()*colors.length)];
      el.style.transform = `rotate(${Math.random()*360}deg)`;
      el.style.opacity = '0.95';
      document.body.appendChild(el);
      // animate
      const fall = el.animate([
        { transform: `translateY(0) rotate(0)`, opacity:1 },
        { transform: `translateY(${200 + Math.random()*600}px) rotate(${Math.random()*720}deg)`, opacity:0.9 }
      ], { duration: 1800 + Math.random()*1400, easing: 'cubic-bezier(.2,.6,.2,1)'});
      fall.onfinish = ()=> el.remove();
    }
  }

  yes.addEventListener('click', ()=>{
    feedback.innerHTML = `<div class="yay">YAYYYYYYYYYYYYY üéâüéâüéâ</div>`;
    popConfetti();
  });

  // puppy animation for NO
  const puppy = document.getElementById('puppyImg');
  no.addEventListener('click', ()=>{
    feedback.innerHTML = '';
    puppy.style.display='block';
    puppy.style.opacity=0;
    puppy.style.transform='translateY(40px) scale(.9)';
    setTimeout(()=>{ puppy.style.transition='all .6s cubic-bezier(.2,.9,.3,1)'; puppy.style.opacity=1; puppy.style.transform='translateY(0) scale(1)'; },20);
    // optional tiny shake after 2.5s
    setTimeout(()=>{ puppy.style.transform='translateY(0) scale(1.02)'; setTimeout(()=> puppy.style.transform='translateY(0) scale(1)',160); },2600);
  });

  // Close puppy on click
  puppy.addEventListener('click', ()=>{ puppy.style.transition='all .3s ease'; puppy.style.opacity=0; setTimeout(()=> puppy.style.display='none',320); });

  // Accessibility note: allow keyboard activation
  yes.addEventListener('keyup', (e)=>{ if(e.key==='Enter') yes.click() });
  no.addEventListener('keyup', (e)=>{ if(e.key==='Enter') no.click() });

  // Preload hint: swap your actual image filenames into the slide divs (slide1.jpg etc.)
</script>

